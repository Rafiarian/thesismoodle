  <div class="container">
    <h3>Result for: {{cpmk_name}}</h3>
    <table class="table table-bordered mt-4 text-center align-middle">
        <thead class="table-light">
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Total Visits</th>
            </tr>
        </thead>
        <tbody>
            {{#records}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{visits}}</td>
            </tr>
            {{/records}}
            {{^records}}
            <tr>
                <td colspan="3">No data found for this CPMK.</td>
            </tr>
            {{/records}}
        </tbody>
    </table>
</div>